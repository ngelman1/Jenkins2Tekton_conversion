pipeline {
    agent any

    environment {
        // Initialize here, but the actual value will be set in the script block
        FINAL_MESSAGE = '' 
    }

    stages {
        stage('Create Greeting') {
            steps {
                script {
                    def tempMessage = "Hello from Stage 1!"
                    
                    env.FINAL_MESSAGE = tempMessage
                    
                    echo "Diagnostic: tempMessage inside script: ${tempMessage}"
                    // Check the environment variable's value immediately after assignment
                    echo "Stage 1 Message: ${env.FINAL_MESSAGE}"
                }
            }
        }

        stage('Append to Greeting') {
            steps {
                script {
                    // Explicitly retrieve the current value from env
                    def currentMessage = env.FINAL_MESSAGE 

                    // Append message
                    env.FINAL_MESSAGE = "${currentMessage} Goodbye from Stage 2!"
                    echo "Stage 2 Appended Message: ${env.FINAL_MESSAGE}"
                }
            }
        }
    }

    post {
        always {
            script {
                echo "Final Message: ${env.FINAL_MESSAGE}"
            }
        }
    }
}